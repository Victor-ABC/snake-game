<div id="users sign-in">
      <h1>Anmelden</h1>
      <form id="registerForm" action="/users/login" method="post">
        <div class="form-group">
          <label for="name" class="control-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            autofocus="autofocus"
          />
        </div>
        <div class="form-group">
          <label for="password" class="control-label">Passwort</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
          />
        </div>
        <button type="submit" class="btn btn-primary">Anmelden</button>
      </form>
      <div style="text-align: center; margin:10px">
      <p>Noch nicht Registriert?</p>
      <button onclick="relocateRegister()"  class="btn">Registrieren</button>
      </div>
    </div>
    <script defer>
      function relocateRegister() {
        location.href = "http://localhost:3000/users/register";
      }
    </script>